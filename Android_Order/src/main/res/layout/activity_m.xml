<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activity.MFood.MActivity"
android:background="@drawable/green">

<ImageView
    android:layout_marginTop="15dp"
    android:id="@+id/image_i"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    >
</ImageView>
    <Button
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_i"
        android:id="@+id/select_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/btn_selector"
        android:text="选择图片"
        android:textSize="17dp"
        android:textColor="#fff"
        ></Button>
<LinearLayout
    android:id="@+id/ll"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/select_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="菜品编号：">

    </TextView>
    <TextView
        android:id="@+id/id_t"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/single_edittext"
        android:layout_marginRight="10dp"
        android:hint="ID"
        android:textSize="17dp"
        android:padding="10dp">
    </TextView>

</LinearLayout>
    <LinearLayout
        android:id="@+id/aa"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="菜品名称：">

        </TextView>
        <EditText
            android:id="@+id/foodname_t"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/single_edittext"
            android:layout_marginRight="10dp"
            android:hint="菜品名称"
            android:paddingLeft="10dp">
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bb"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="菜品价格：">

        </TextView>
        <EditText
            android:id="@+id/foodprice_t"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/single_edittext"
            android:layout_marginRight="10dp"
            android:hint="菜品价格"
            android:paddingLeft="10dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cc"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="菜品味道：">

        </TextView>
        <EditText
            android:id="@+id/taste_t"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/single_edittext"
            android:layout_marginRight="10dp"
            android:hint="味道：原味、微辣"
            android:paddingLeft="10dp">
        </EditText>
    </LinearLayout>
    <Button
        android:layout_below="@+id/cc"
        android:id="@+id/update"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_selector"
        android:text="更改"
        android:textSize="17dp"
        android:textColor="#fff"></Button>
    <Button
        android:layout_below="@+id/update"
        android:layout_margin="10dp"
        android:id="@+id/delete"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_selector"
        android:text="删除"
        android:textSize="17dp"
        android:textColor="#fff"></Button>

</RelativeLayout>